@model OrangeOrchard.Models.MovieGenreViewModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

<!-- add search with method get to specify request-->
<form asp-controller="Trees" asp-action="Index" method="get">
    <p>
        <select asp-for="movieGenre" asp-items="Model.genres">
            <option value="">All</option>
        </select>

        Name: <input type="text" name="SearchString">
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.trees[0].Name)
                </th>
                <!--th>
                    @Html.DisplayNameFor(model => model.trees[0].YearPlanted)
                </th -->
                <th>
                    @Html.DisplayNameFor(model => model.trees[0].Age)
                </th>
                <th>
                    Height
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.trees[0].NumOranges)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.trees)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <!--td>
                    @Html.DisplayFor(modelItem => item.YearlPlanted)
                </td-->
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Height)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumOranges)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
